<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">
    <persistence-unit name="joutakPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.joutak.loginpluginforjoutak.domain.PlayerEntity</class>

        <properties>
            <!-- Эти значения будут переопределены динамически через Java код -->
            <property name="jakarta.persistence.jdbc.driver" value=""/>
            <property name="jakarta.persistence.jdbc.url" value=""/>
            <property name="jakarta.persistence.jdbc.user" value=""/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <property name="hibernate.dialect" value=""/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
