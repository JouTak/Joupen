<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <!-- Консольный аппендер с цветным выводом -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %highlight{%-5level} %logger{36} - %msg%n">
                <Highlight>
                    <Level name="ERROR" foreground="yellow"/>
                    <Level name="WARN" foreground="yellow"/>
                    <Level name="INFO" foreground="green"/>
                    <Level name="DEBUG" foreground="cyan"/>
                </Highlight>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="org.hibernate" level="WARN"/>
        <Logger name="org.testcontainers" level="INFO"/>
    </Loggers>
</Configuration>